#include <stdio.h>

int main() {
    int escolha;

    printf("Escolha uma opção (1, 2 ou 3):\n");
    scanf("%d", &escolha);

    switch (escolha) {
        case 1:
            printf("Você escolheu a opção 1.\n");
            break;
        case 2:
            printf("Você escolheu a opção 2.\n");
            break;
        case 3:
            printf("Você escolheu a opção 3.\n");
            break;
        default:
            printf("Opção inválida.\n");
    }

    return 0;
}
